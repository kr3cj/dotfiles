[[ $- = *i* ]] || return 0
${IS_MACOS} || return 0

# fix ssh directory permissions
find -L ~/.ssh/ -type f -exec ${BASE_PATH}/opt/coreutils/libexec/gnubin/chmod -c 600 '{}' \;
find -L ~/.ssh/ -type d -exec ${BASE_PATH}/opt/coreutils/libexec/gnubin/chmod -c 700 '{}' \;

