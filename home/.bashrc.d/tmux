[[ $- = *i* ]] || return
${IS_OSX} || return

function _ssh_auth_save() {
  ln -sf "$SSH_AUTH_SOCK" "$HOME/.ssh/ssh-auth-sock.$HOSTNAME"
}
alias screen='_ssh_auth_save ; export HOSTNAME=$(hostname) ; $(which screen)'
alias tmux='_ssh_auth_save ; export HOSTNAME=$(hostname) ; $(which tmux)'
alias tma='lpass show --password --clip LDAP && ssh -tt laphroaig tmux new-session -A'
