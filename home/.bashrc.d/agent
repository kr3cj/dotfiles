[[ $- = *i* ]] || return

# fix ssh directory permissions
find -L ~/.ssh/ -type f -exec chmod 600 '{}' \;
find -L ~/.ssh/ -type d -exec chmod 700 '{}' \;

${IS_OSX} || return
${HEALTHY_INTERNET} || return

# ssh agent stuff
[[ -f ${HOME}/.ssh/ssh-agent-setup ]] && source ${HOME}/.ssh/ssh-agent-setup
$(env | grep -q SSH_AUTH_SOCK) || ( eval $(ssh-agent -s) || (ssh_clean && ssh_start))

### load ssh keys into agent ###
