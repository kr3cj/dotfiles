[[ $- = *i* ]] || return

# moved echo from .bashrc since text from there can mess up rsync
${HEALTHY_INTERNET} || echo "Skipping network related profile tasks as \
there's no healthy internet connectivity."

#  troubleshooting
# [[ ${HISTSIZE} -lt 1000000 ]] && echo -e "\nSomething has overridden \${HISTSIZE} to ${HISTSIZE}!!!\n"

[[ -f ~/.base_homeshick_vars ]] && source ~/.base_homeshick_vars
export IS_OSX="false"
export IS_LINUX="false"
case "$(uname)" in
  Darwin)
    export IS_OSX="true" ;;
  Linux)
    export IS_LINUX="true" ;;
  *)
    echo "Unable to determine Linux or OSX" ;;
esac
